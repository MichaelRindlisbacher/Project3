<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Checkout - P & P</title>
    <link rel="stylesheet" href="/checkout.css">
</head>
<body class="general-page">
    <nav class="navbar">
        <div class="nav-logo">
            <a href="/"><img src="/images/logo.png" alt="P & P Logo"></a>
        </div>        
        <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a href="/product">Shop</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/checkout">View Cart (<%= cartLength %>)</a></li>
        </ul>
    </nav> 

    <div class="about-us-container">
        <h1 class="about-title">View Cart</h1>

        <!-- Display Cart Items -->
        <div id="cart-items">
            <% if (cart.length > 0) { %>
            <h2>Your Cart:</h2>
            <% cart.forEach(item => { %>
                <div class="cart-item">
                    <img src="/images/<%= item.name.toLowerCase().replace(/\s+/g, '') %>.jpg" alt="<%= item.name %>">
                    <p><strong><%= item.name + ' ' + item.type %></strong></p>
                    <p>Price: $<%= item.price %></p>
                    <%= item.id %><br>
                    <p><button class="remove-from-cart" data-product-id="<%= item.id %>">Remove</button></p>
                </div>
            <% }) %>
            <% } else { %>
            <p>Your cart is empty.</p>
            <% } %>
        </div>

        <!-- Checkout Form -->
        <button id="checkout-button">Checkout</button>

        <div id="checkout-form-container" style="display: none;">
            <h2>Checkout</h2><br>
            <form id="checkout-form" action="/checkout" method="POST">
            <label for="first-name">First Name:</label>
            <input type="text" id="first-name" name="first-name" />
            <br>
            <label for="last-name">Last Name:</label>
            <input type="text" id="last-name" name="last-name" />
            <br>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" />
            <br>
            <label for="address">Address:</label>
            <input type="text" id="address" name="address" />
            <br>
            <label for="city">City:</label>
            <input type="text" id="city" name="city" />
            <br>
            <label for="state">State:</label>
            <input type="text" id="state" name="state" />
            <br>
            <label for="zip">Zip:</label>
            <input type="text" id="zip" name="zip" />
            <br>
            <label for="wrist-size">Wrist Size:</label>
            <select id="wrist-size" name="wrist-size">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <br>
            <button type="submit">Submit Order</button>
            </form>
        </div>
    </div>
    <script src="/script/checkout.js"></script>
</body>
</html>