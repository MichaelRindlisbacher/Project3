<!DOCTYPE html>
<html>
<head>
  <title>Product Records</title>
  <link rel="stylesheet" href="/product_styles.css">
  <style>
    table {
      width: 80%;
      margin: 20px auto;
      border-collapse: collapse;
      font-size: 20px; /* Reduce the font size of the table */
    }
    th, td {
      border: 1px solid #ddd;
      padding: 5px; /* Reduce the padding to decrease row height */
      text-align: center;
      line-height: 1.2; /* Adjust line height for smaller rows */

    }
    th {
      background-color: #F2F2F2;
      font-weight: bold;
      font-size: 20px;
    }
    button {
      padding: 4px 8px; /* Adjust button size */
      margin: 2px;
      font-size: 20px; /* Adjust button font size */
      cursor: pointer;
    }

    .main-content {
      margin-top: 60px;
    }

    body {
      font-size: 30px;
    }

  
  </style>
</head>
<body class="main-content">
  <h1 style="text-align: center;">Product Records</h1>
  <form action="/" method="GET">
    <button type="submit">Back to Main Page</button>
  </form>
  <form action="/addProduct" method="GET">
        <button type="submit">Add Product</button>
  </form>
  <table>
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Product Type</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (products.length > 0) { %>
        <% products.forEach(row => { %>
          <tr>
            <input type="hidden" value="row.id"> <!-- these two lines are
            unnecessary but he wanted to show us what hidden looks like-->
            <td><%= row.productname %></td>
            <td><%= row.producttype %></td>
            <td><%= row.price %></td>
            <td>
              </form>
              <form action="/editProduct/<%= row.productid %>" method="GET" style="display:inline;"> <!-- the row.id is a parameter -->
                <button type="submit">Edit</button>
              </form>
              <form action="/deleteProduct/<%= row.productid %>" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('Are you sure you want to delete this record?');">Delete</button>
              </form>
              <form action="/product/<%= row.productid %>" method="GET" style="display:inline;"> <!-- the row.id is a parameter -->
                <button type="submit">View</button>
              </form>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="7">No data available</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</body>
</html>